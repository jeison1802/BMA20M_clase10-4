print("\nEjercicio 4\n")



L2 = [4,3,0,8,9]
L3 = []


val2 = int(input("Ingrese un numero para la division: "))


for i in L2: 
    
    if i==0:
        print("No se puede realizar la division porque el divisor es cero") 
        continue
  
    div = val2/i
    L3.append(div)
    print(div)
    
print("La lista con los nuevos valores son: ",L3)    
    
    
