print("Ejercicio 3\n")

L1 = list()
s = 0

n = int(input("Ingrese el numero de elementos: "))

for i in range(n):
    val= int(input("Ingrese un numero: "))
    L1.append(val)
     
print("La lista es: ",L1)


for v in L1:
    s+=v
    
print(f"La suma de los valores es: {s}")    

